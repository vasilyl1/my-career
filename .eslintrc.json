{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "es2017": true,
    "es2018": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "vars-on-top": "error",
    "no-trailing-spaces": "error",
    "no-mixed-spaces-and-tabs": "error",
    "comma-dangle": "error",
    "no-redeclare": "error",
    "linebreak-style": ["error", "unix"]
  },
  "extends": []
}
