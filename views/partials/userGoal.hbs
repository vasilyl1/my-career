{{#with (first goals)}}
  <div id='goal{{this.id}}'>
    <li class="my-2 border border-zinc-600 rounded-md p-2">
      <div class='container flex flex-col max-w-full'>
        <p class='flex self-end text-slate-400'>{{formatDate this.date}}</p>
        <h3 class='text-2xl'>{{this.name}}</h3>
        <br>
        <p>{{this.body}}</p>
        <br>
      </div>
    </li>
  </div>
{{/with}}

