<ul 
id='scrollable-window'
style="height: full; overflow: scroll;" class="list-none mb-20 appearance-none whitespace-nowrap">
  {{#each goals as |goal|}}
    
  <a href="/goal/{{goal.id}}">
    <div id='goal{{goal.id}}' class='hover:shadow-xl'>
      <li class="list-none my-2 border border-zinc-600 rounded-md p-2">
        <div class='container flex flex-col max-w-full'>
          <p class='flex self-end text-slate-400'>{{formatDate goal.date}}</p>
          <h3 class='text-2xl whitespace-normal overflow-hidden'>{{goal.name}}</h3>
          <br>
          <p class='whitespace-normal overflow-hidden'>{{goal.body}}</p>
          <br>
        </div>
      </li>
    </div>
    </a>
{{!-- Hyperlink created using anchor tag - user clicks on hyperlink
 directed to page accociated with URL generated by variable--}}
  {{/each}}
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.footer').removeClass('hidden');
      $('#advisorDropdown').addClass('hidden');
      $('#dashboardBtn').addClass('hidden');
      $('#addCommentForm').addClass('hidden');
    });
  </script>
</ul>