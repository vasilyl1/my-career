<ul 
id='scrollable-window'
style="height: 75vh; overflow: scroll;" class="list-none appearance-none whitespace-nowrap">
  {{#each goals as |goal|}}
    <div>
      <li class="py-2">
        <div class='container flex flex-col max-w-5xl'>
          <p class='flex self-end'>{{formatDate goal.date}}</p>
          <h3>{{goal.name}}</h3>
          <p>{{goal.body}}</p>
        </div>
      </li>
    </div>
  {{/each}}
</ul>