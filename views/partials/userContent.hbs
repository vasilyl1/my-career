<ul 
id='scrollable-window'
style="height: 75vh; overflow: scroll;" class="list-none appearance-none whitespace-nowrap">
  {{#each goals as |goal|}}
    
  <a href="/goal/{{goal.id}}">
    <div id='goal{{goal.id}}' class='hover:shadow-xl' onclick='showPartial({{goal.id}})'>
      <li class="my-2 border border-zinc-600 rounded-md p-2">
        <div class='container flex flex-col max-w-full'>
          <p class='flex self-end text-slate-400'>{{formatDate goal.date}}</p>
          <h3 class='text-2xl whitespace-normal overflow-hidden'>{{goal.name}}</h3>
          <br>
          <p class='whitespace-normal overflow-hidden'>{{goal.body}}</p>
          <br>
        </div>
      </li>
    </div>
    </a>
{{!-- Hyperlink created using anchor tag - user clicks on hyperlink
 directed to page accociated with URL generated by variable--}}
  {{/each}}
</ul>