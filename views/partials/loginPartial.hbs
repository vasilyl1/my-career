<div id='loginContainer' class='w-full'>
  <h1 class='flex justify-center text-xl pb-5'>Please Login</h1>
  <form class='flex flex-col md:grid col cols-2 md:gap-5'>
    <div class="grid justify-items-center md:justify-items-end pb-5">
      <label class='w-1/2 grid justify-items-center'>
        <p class="grid justify-center text-sm font-medium text-slate-700">Email</p>
        <!-- Using form state modifiers, the classes can be identical for every input -->
        <input id='loginEmail' autocomplete='off' type="text" placeholder="example@abc.com" class="
          mt-1 w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
          focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500
          disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
          invalid:border-pink-500 invalid:text-pink-600
          focus:invalid:border-pink-500 focus:invalid:ring-pink-500
        "/>
      </label>
    </div>
    
    <div class="grid justify-items-center md:justify-items-start pb-5">
      <label class='w-1/2 grid justify-items-center'>
        <p class="grid justify-center text-sm font-medium text-slate-700">Password</p>
        <!-- Using form state modifiers, the classes can be identical for every input -->
        <input id='loginPassword' autocomplete='off' type="password" placeholder="******" class="
          mt-1 w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
          focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500
          disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none
          invalid:border-pink-500 invalid:text-pink-600
          focus:invalid:border-pink-500 focus:invalid:ring-pink-500
        "/>
      </label>
    </div>
    
    <div class='flex flex-row col-span-2'>
      <div class="flex justify-center w-full">
        <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 m-2 text-sm font-medium hover:no-underline hover:text-white hover:bg-gray-600" id="loginBtnSignIn">Login</button>
        <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 m-2 text-sm font-medium hover:no-underline hover:text-white hover:bg-gray-600" id="signupBtn">Signup</button>
      </div>
    </div>
  </form>
</div>
{{> modal}}
{{> signup}}
<script src="/js/login.js"></script>

<script>
//closeModal function defined
  const closeModal = () => {
  const modal = document.querySelector('.modal');
  modal.classList.remove('modal--active');
}
//openModal function defined
const openModal = (message) => {
  const modal = document.querySelector('.modal');
  const modalMessage = document.querySelector('.modal__message');
  modalMessage.textContent = message;
  modal.classList.add('modal--active');
}
//Export closeModal, openModal to be used within login.js
export { closeModal, openModal };
</script>