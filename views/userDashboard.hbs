
{{#unless uData.advisor}}
  <div class='flex-col w-5/6'>
    {{> userContent}}
    {{> createGoal}}
    <div class='flex justify-center'>
      <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 my-2 text-sm font-medium hover:no-underline hover:text-white 
      hover:bg-gray-600" id="newGoalBtn">New Goal</button>
    </div>
  </div>
{{/unless}}

{{#if uData.advisor}}
  <div class='flex-col w-5/6'>
    <h2 class='text-black grid justify-center text-xl pb-5'>Click on a Goal to Review!!</h2>
    {{> userContent}}
  </div>
{{/if}}