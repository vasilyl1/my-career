<div class="container flex-col w-5/6">
  <div id="singleGoal">
    <div id='goal{{goal.id}}'>
      <li class="list-none my-2 border border-zinc-600 rounded-md p-2" class='hover:shadow-xl'>
        <div class='container flex flex-col max-w-full'>
          <p class='flex self-end text-slate-400'>{{formatDate goal.date}}</p>
          <h3 class='text-2xl whitespace-normal overflow-hidden'>{{goal.name}}</h3>
          <br>
          <p class='whitespace-normal overflow-hidden'>{{goal.body}}</p>
          <br>
        </div>
        <div class="flex flex-row justify-end">
          {{#if uData.advisor}}
          {{else}}
            <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 m-2 text-sm font-medium hover:no-underline hover:text-white hover:bg-gray-600" id="editGoalForm">Edit</button>
            <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 m-2 text-sm font-medium hover:no-underline hover:text-white hover:bg-gray-600" id="deleteGoalBtn">Delete</button>
          {{/if}}
        </div>
      </li>
    </div>
  </div>
  <div id='btnContainer'>
    <br>
    {{#if uData.advisor}}
      <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 m-2 text-sm font-medium hover:no-underline hover:text-white hover:bg-gray-600" id='addCommentForm'>Add Comment</button>
    {{else}}
      <div class="">
        {{> advisorDropdown}}
      </div>
    {{/if}}
    <a href="/" class='flex justify-center'>
    <button class="no-button bg-gray-700 text-white rounded-md px-3 py-2 m-2 text-sm font-medium hover:no-underline hover:text-white hover:bg-gray-600">Dashboard</button>
    </a>
    
  </div>
  {{#if uData.advisor}}
    {{> addComment}}
  {{else}}
    {{> editGoal}}
  {{/if}}
</div>